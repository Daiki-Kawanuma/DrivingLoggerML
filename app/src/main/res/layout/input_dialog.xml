<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/userid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userid_title" />

    <EditText
        android:id="@+id/userid_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/carid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carid_title" />

    <EditText
        android:id="@+id/carid_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/sensorid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensorid_title" />

    <EditText
        android:id="@+id/sensorid_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/finish_button" />

</LinearLayout>